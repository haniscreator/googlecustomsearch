APP_DEBUG=true
APP_URL=http://localhost

LOG_CHANNEL=stack
LOG_LEVEL=debug

# =====================================================
# DATABASE: Use in-memory SQLite for ultra-fast tests
# =====================================================
DB_CONNECTION=sqlite
DB_DATABASE=:memory:

# =====================================================
# CACHE & QUEUE: use array + sync to avoid Redis/Queue
# =====================================================
CACHE_DRIVER=array
SESSION_DRIVER=array
QUEUE_CONNECTION=sync

# =====================================================
# REDIS (disabled during tests)
# =====================================================
REDIS_CLIENT=predis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1

# =====================================================
# MAIL: disable external operations
# =====================================================
MAIL_MAILER=array

# =====================================================
# SEARCH API (tests use Http::fake)
# No real Google call will be made.
# =====================================================
SEARCH_PROVIDER=google
SEARCH_API_ENDPOINT=https://www.googleapis.com/customsearch/v1
SEARCH_API_KEY=fake-key
GOOGLE_SEARCH_ENGINE_ID=fake-cx
SEARCH_API_QUERY_PARAM=q
SEARCH_API_KEY_HEADER=
SEARCH_API_KEY_PREFIX=
